<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>
  <div class="bigbox1">
    <table class='table tablebox'>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_active %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-sm btn-success", data: {"turbolinks" => false} %>
    <%= link_to "注文履歴一覧を見る", admin_orders_path, class:"btn btn-sm btn-info", data: {"turbolinks" => false} %>
    </div>
</div>