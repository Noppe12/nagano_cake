<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

  <div class="form-group">
    <div class="label">会員ID</div><span>
    <div>
      <%= @customer.id %>
    </div>
  </div>
<%= form_with model: @customer, local:true do |f| %>
  <div class="form-group">
    <div class="label">氏名</div><span>
    <div><%= f.text_field :last_name %></div><span>
    <div><%= f.text_field :first_name %></div>
  </div>
  <div class="field">
    <div class="label">フリガナ</div>
    <div><%= f.text_field :last_name_kana %></div><span>
    <div><%= f.text_field :first_name_kana %></div>
  </div>
  <div class="field">
    <div class="label">郵便番号</div>
    <div><%= f.text_field :postal_code %></div>
  </div>
  <div class="form-group">
    <div class="label">住所</div><span>
    <%= f.text_area :address, class:"form-control  address", rows:"1" %>
  </div>
  <div class="field">
    <div class="label">電話番号</div><span>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
    <div class="label">メールアドレス</div><span>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <div class="label">会員ステータス</div><span>
    <%= form.radio_button :is_active, true %>
    <%= form.label :is_active, "有効", {value: true, style: "display: inline-block;"} %>
    <%= form.radio_button :is_active, false %>
    <%= form.label :is_active, "退会", {value: false, style: "display: inline-block;"} %>
  </div>
  <div class="action">
    <%= f.submit '変更を保存' %>
  </div>
<% end %>