<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei"><%= @customer.last_name %>　<%= @customer.first_name %>さんの会員情報編集</h4>
    </div>
  </div>
  <div class="bigbox1">
    <table class="table tablebox">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <%= form_with model:@customer, url: admin_customer_path(@customer.id), method: :PATCH, local:true do |f| %>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %>　　<%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %>　　<%= f.text_field :first_name_kana %></td>
        </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_area :address, class:"form-control  address", rows:"1" %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効", {value: true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "退会", {value: false, style: "display: inline-block;"} %>
        </td>
      </tr>
    </table>
    <div class="action">
      <%= f.submit '変更を保存' %>
    </div>
    <% end %>
  </div>
</div>