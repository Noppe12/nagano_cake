<h2>注文履歴詳細</h2>
  <table class='table'>
    <tr>
      <th>購入者</th>
      <td><%= link_to admin_customer_path(customer.id) do %><%= @order.name %><% end %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.address %></br><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.pay_status %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td><% if @order.order_status == 1 %>
            <%= form.select :making_status == 1, class: "making_status-select" %>
          <% else %>
            <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
              <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
              <%= f.submit "更新" , class: "btn btn-outline-success" %>
            <% end %>
          <% end %>
      </td>
    </tr>
  </table>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.items.add_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.items.add_tax_price * order_detail.amount %></td>
          <%= form_with model: order_details, url: admin_order_detail_path, method: :patch, local: true do |f| %>
            <td><%= f.select :making_status, OrderDetail.making_statuses.keys, class: "making_status-select" %></td>
            <td><%= f.submit "更新", class: "btn btn-outline-success" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <span>
  <div class="main">
    <div class="1">
      <div class="2">商品合計</div><span>
      <div><%= @order_detail.price %></div>
    </div>
    <div class="1">
      <div class="2">送料</div><span>
      <div><%= @order_detail.postage %></div>
    </div>
    <div>
      <div class="1">請求金額合計</div><span>
      <div class="2"><%= @order_detail.price + @order_detail.postage %></div>
    </tr>
  </div>
    