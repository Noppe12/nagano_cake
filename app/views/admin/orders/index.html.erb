<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei">注文履歴一覧</h4>
    </div>
  </div>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to admin_order_path(order.id) do %><%= I18n.l(order.created_at) %><% end %></td>
          <td><%= order.name %></td>
          <td>
            <% amount = 0 %>
            <% order.order_details.each do |detail| %>
              <% detail.amount %>
              <% amount = amount + detail.amount %>
            <% end %>
            <%= amount %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
</div>
</div>