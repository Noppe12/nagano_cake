<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h5 class="daimei">ジャンル一覧・追加</h5>
    </div>
  </div>
  <div class="bigbox1">
    <div class="box2">
    <%= form_with model: @genre, url:'/admin/genres', local:true do |f| %>
      <table>
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name, placeholder:'ジャンル名' %></td>
          <td><%= f.submit '新規登録', class: "btn-success" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  <table class="table tablebox">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>