<h2>商品編集</h2>

<%= form_with model: @item, local:true do |f| %>
  <div class="form-group">
    <div class="label">商品画像</div><span>
    <%= f.attachment_field :image_id, placeholder: "ファイルの選択" %>
  </div>
  <div class="field">
    <div class="label">商品名</div>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <div class="label">商品説明</div><span>
    <%= f.text_area :introduction, class:"form-control  introduction", rows:"5" %>
  </div>
  <div class="form-group">
    <div class="label">ジャンル</div><span>

    <%= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>

  </div>
  <div class="field">
    <div class="label">税抜き価格</div><span>
    <%= f.text_field :name %><span><p>円</p>
  </div>
  <div class="field">
    <div class="label">販売ステータス</div><span>
    <%= form.radio_button :is_active, true %>
    <%= form.label :is_active, "販売中", {value: true, style: "display: inline-block;"} %>
    <%= form.radio_button :is_active, false %>
    <%= form.label :is_active, "販売停止中", {value: false, style: "display: inline-block;"} %>
  </div>
  <div class="action">
    <%= f.submit '変更を保存' %>
  </div>
<% end %>