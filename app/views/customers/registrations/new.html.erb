<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei">新規会員登録</h4>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <div class="text-danger">
      <%= render "customers/shared/error_messages", resource: resource %>
    </div>
    <div class="bigmain">
      <table class='tablebox table table-borderless'>
        <tr>
          <th>名前</th>
          <td>(姓) <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: '令和' %>   </td>
          <td>(名) <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: '道子' %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>(セイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: 'レイワ' %>  </td>
          <td>(メイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: 'ミチコ' %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: '0000000' %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_area :address, autofocus: true, autocomplete: "address", placeholder: '東京都渋谷区代々木神園町0-0' %></td>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td><%= f.text_area :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: '00000000000' %></td>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <%= f.hidden_field :is_active, value: true %>
      </table>
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h5 class="daimei">既に登録済みの方</h5>
    </div>
  </div>
  <div><%= link_to new_customer_session_path do %>こちら<% end %><span>からログインしてください。</span></div>
</div>