<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if customer_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div><%= link_to 'ながのCAKE', root_path, class: "navbar-brand" %></div>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <div class="text-light">ようこそ、<%= @customer.first_name %>さん！</div>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to 'マイページ', customers_my_page_path, class: 'fas fa-home nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '商品一覧', items_path, class: 'fas fa-users nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'カート', cart_items_path, class: 'fas fa-book-open nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% elsif admin_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div><%= link_to 'ながのCAKE', root_path, class: "navbar-brand" %></div>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to '商品一覧', admin_items_path, class: 'fas fa-home nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '会員一覧', admin_customers_path, class: 'fas fa-users nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '注文履歴一覧', admin_orders_path, class: 'fas fa-book-open nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ジャンル一覧', admin_genres_path, class: 'fas fa-book-open nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% else %>
    <header>
      <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div><%= link_to 'ながのCAKE', root_path, class: "navbar-brand" %></div>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to 'About', about_path, class: 'fas fa-home nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '商品一覧', items_path, class: 'fas fa-users nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '新規登録', new_customer_registration_path, class: 'fas fa-book-open nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログイン', new_customer_session_path, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    </header>
  <% end %>
  <main class="mb-auto">
    <%= yield %>
  </main>
  <footer>
    <div class='container mt-5'>
      <div class='row'>
        </div>
    </div>
  </footer>
  </body>
</html>
