<div class="container">
  <div class="row">
    <!-- 以下を追加 -->
    <div class="col-2">
      <table class="mt-3 mr-1">
        <thead class="border border-dark">
          <tr>
            <th style="width: 15%">ジャンル</th>
          </tr>
        </thead>
        <tbody class="pb-3 border border-dark">
          <% @genres.each do |genre| %>
            <tr>
              <td style="width: 15%"><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 mt-2">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "no_image.jpg" %>
    </div>
    <div class="col-5 mt-2">
    <div class="h4 font-weight-bold"><%= @item.name %></div>
        <div class="h5 m-1"><%= @item.introduction %></div>
        <div class="m-1 font-weight-bold">￥<%= (@item.price*1.1).floor %><span class="small">(税込)</span></div>
        <div>
          <%= form_with model: @cart_item, local:true do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <div class="">
              <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
              <span>
                <%= f.submit 'カートに入れる', class: "btn btn-success" %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>