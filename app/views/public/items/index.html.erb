<div class="container">
  <div class="row">
    <!-- 以下を追加 -->
    <div class="col-2">
      <table class="mt-3 mr-1">
        <thead class="border border-dark">
          <tr>
            <th style="width: 15%">ジャンル</th>
          </tr>
        </thead>
        <tbody class="pb-3 border border-dark">
          <% @genres.each do |genre| %>
            <tr>
              <td style="width: 15%"><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-8">
      <div class="h4 font-weight-bold">
        商品一覧(全<%= @count %>件)
      </div>
      <div class="row">
         <% @items.each do |item| %>
         <div class="col-md-3">
           <div class="card md-2">
             <div class="card">
               <div class="card-img-top">
                 <%= link_to item_path(item.id) do %><%= attachment_image_tag item, :image, :fill, 150, 80 %><% end %>
               </div>
               <div class="card-body text-start">
                 <div class="small">
                   <%= item.name %>
                 </div>
                 <div class="small">
                   ￥<%= item.price %>
                 </div>
               </div>
             </div>
           </div>
         </div>
         <% end %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
           <%= paginate @items %>
      </div>
    </div>
  </div>
</div>