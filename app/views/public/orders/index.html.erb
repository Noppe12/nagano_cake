<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-5">
      <p class="daimei">注文履歴一覧</p>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |ordered| %>
            <tr>
              <td><%= I18n.l(ordered.created_at) %></td>
              <td>
                〒<%= ordered.postal_code %><br />
                <%= ordered.address %><br />
                <%= ordered.name %>
              </td>
              <td>
                <% ordered.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                <% end %>
              </td>
              <td><%= ordered.price %></td>
              <td><%= link_to order_path(ordered.id), class:"btn btn-info" do %>表示する<% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>