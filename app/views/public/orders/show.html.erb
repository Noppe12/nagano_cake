<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <p class="daimei">注文履歴詳細</p>
    </div>
  </div>
  <div class="row">
    <div class='col-7'>
      <div class="font-weight-bold">注文情報</div>
        <table  class="table table-bordered border-dark">
          <tr>
            <th>注文日</th>
            <td><%= I18n.l(@order.created_at) %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
            <%= @order.postal_code %><br />
            <%= @order.address %><br />
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-3">
      <div class="font-weight-bold">請求情報</div>
      <table  class="table table-bordered border-dark">
        <tr>
          <th>商品合計</th>
          <td><%= @order.price %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="">ご請求額</th>
          <% total = @order.price + @order.postage %>
          <td><%= total %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <div class="font-weight-bold">注文内容</div>
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th class="col-6">商品</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-1">個数</th>
            <th class="col-1">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <% subtotal = order_detail.price * order_detail.amount %>
              <td><%= subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>