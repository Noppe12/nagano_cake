<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h5 class="daimei">マイページ</h5>
    </div>
  </div>
  <div class="row">
    <div class="h5 col-3 font-weight-bold">登録情報</div>
    <div class="col-5 d-flex align-items-end justify-content-end">
      <%= link_to customers_edit_path(@customer.id), class:"btn btn-success" do %>編集する<% end %>
    </div>
  </div>

  <div class="row mt-2">
    <table class='table table-hover table-inverse'>
      <tr>
        <th>氏名</th>
        <td><%= @customer.first_name %> <%= @customer.last_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row mt-3">
    <div class="h6 col-3 font-weight-bold">配送先</div>
    <span class="col-5 d-flex align-items-end justify-content-end">
      <%= link_to addresses_path, class:"btn btn-info" do %>一覧を見る<% end %>
    </span>
  </div>
  <div class="row mt-3">
    <div class="h6 col-3 font-weight-bold">注文履歴</div>
    <span class="col-5 d-flex align-items-end justify-content-end">
      <%= link_to orders_path, class:"btn btn-info" do %>一覧を見る<% end %>
    </span>
  </div>
</div>